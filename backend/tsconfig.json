{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/app",
    "declaration": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/app/**/*",
    "../dominio/**/*",
    "../config/**/*"
  ]
}